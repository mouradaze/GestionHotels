@model IEnumerable<GestHot.Models.Comment>

@{
    ViewBag.Title = "Review";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="row my-5">
    <h3 class="text-uppercase text-center">reviews</h3>
</div>
<div class="row my-3">

    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Review</th>
                    <th scope="col">Hotel Name</th>
                    <th scope="col">User Name</th>
                    <th scope="col">Prediction</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@Html.DisplayFor(modelItem => item.message)</th>
                        <th>@Html.DisplayFor(modelItem => item.Hotel.name)</th>
                        <th>@Html.DisplayFor(modelItem => item.User.Name)</th>
                        <th>
                            @if (item.prediction == 1)
                            {
                            <i class="bi bi-emoji-smile-fill"></i>
                            }
                            else if (item.prediction == -1)
                            {
                            <i class="bi bi-emoji-frown-fill"></i>
                            }
                            else
                            {
                        <i class="bi bi-emoji-neutral-fill"></i>
                            }
                        </th>
                        <th><a data-bs-toggle="tooltip" data-bs-placement="top" title="Delete" class="mx-2 no-color" href="@Url.Action("deleteR","Admin")"><i class="bi bi-trash3-fill"></i></a></th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

