@model IEnumerable<GestHot.Models.Reservation>

@{
    ViewBag.Title = "Reservation";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row my-5">
    <h3 class="text-uppercase text-center">reservations</h3>
</div>
<div class="row my-3">

    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th scope="col">User Name</th>
                    <th scope="col">Hotel name</th>
                    <th scope="col">Start Date</th>
                    <th scope="col">End Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@Html.DisplayFor(modelItem => item.User.Name)</th>
                        <th>@Html.DisplayFor(modelItem => item.Hotel.name)</th>
                        <th>@Html.DisplayFor(modelItem => item.startR)</th>
                        <th>@Html.DisplayFor(modelItem => item.endR)</th>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

