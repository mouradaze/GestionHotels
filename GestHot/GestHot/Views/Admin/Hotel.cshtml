@model IEnumerable<GestHot.Models.Hotel>

@{
    ViewBag.Title = "Hotel";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row my-5">
    <h3 class="text-uppercase text-center">hotels</h3>
</div>
<div class="row my-3">

    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Adresse</th>
                    <th scope="col">Rooms</th>
                    <th scope="col">Price</th>
                    <th scope="col">Note</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@Html.DisplayFor(modelItem => item.name)</th>
                        <th>@Html.DisplayFor(modelItem => item.adresse)</th>
                        <th>@Html.DisplayFor(modelItem => item.nbCH)</th>
                        <th>@Html.DisplayFor(modelItem => item.prix)</th>
                        <th>@Html.DisplayFor(modelItem => item.note)</th>
                        <th>
                            <a data-bs-toggle="tooltip" data-bs-placement="top" title="See Details" class="mx-2 no-color" href="@Url.Action("Details", "Hotel", new {id = item.idH})"><i class="bi bi-file-earmark-text-fill"></i></a>
                            <a data-bs-toggle="tooltip" data-bs-placement="top" title="Delete" class="mx-2 no-color" href="@Url.Action("deleteH","Admin", new {id = item.idH})"><i class="bi bi-trash3-fill"></i></a>

                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

