@model GestHot.Models.User
@{
    ViewBag.Title = "Favorites";
}

<div class="container">
    <div class="row my-5">
        <h2 class="text-red">My Reservations</h2>
    </div>
    <div class="row my-3">
        <table class="table">
            <tr>
                <th>
                    <h4>Id Favor</h4>
                </th>
                <th>
                    <h4>Id User</h4>
                </th>
                <th>
                    <h4>Id Hotel</h4>
                </th>

            </tr>

            @{var it = Model;
                }
                @foreach (var item in it.Favorites)
                {
                    
                <tr>
                    <td>
                        @item.Hotel.name
                        
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hotel.adresse)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hotel.nbCH)
                    </td>

                </tr>
                }
            

        </table>
    </div>
</div>

