@model IEnumerable<GestHot.Models.Hotel>

@{
    ViewBag.Title = "Favorites";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-sm-5 mx-4">
                    <div class="card my-5">

                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-4">
                                    <img src="@Html.DisplayFor(modelItem => item.fileH)" class="img-thumbnail" />
                                </div>
                                <div class="col-sm-8">
                                    <a href="@Url.Action("Details", "Hotel", new {id = item.idH})" class="no-color">
                                        <h2 class="my-2">

                                            @Html.DisplayFor(modelItem => item.name)


                                        </h2>
                                    </a>

                                    <h4>@Html.DisplayFor(modelItem => item.adresse)</h4>
                                    <p>
                                        @for (int i = 0; i < item.note; i++)
                                        {

                                            <i class="bi bi-star-fill gold"></i>
                                        }
                                                                    </p>
                                </div>
                            </div>
                        </div>

                    </div>
                
            </div>
        }
    </div>
</div>